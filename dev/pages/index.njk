<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
  <h1>This is the index page</h1>
  
  {% import "macros/nav-macro.njk" as nav %}
  {{nav.active('home')}}

  <div class="gallery">
    <!-- Loops through "images array -->
    {% for image in images %}
      <div class="gallery_item">
        <img src="{{image.src}}" alt="{{image.alt}}">
      </div>
    {% endfor %}
  </div>  

{% endblock %}